<mvc:View controllerName="SE.SMT_Employee.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true"
	xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:card="sap.f.cards" xmlns:f="sap.f">
	<!--<Shell id="shell">-->
	<App id="app">
		<pages>
			<Page id="page" title="{i18n>title}" showHeader="false">
				<content>
					<tnt:ToolPage >
						<tnt:header>
							<tnt:ToolHeader>
								<Button type="Transparent" icon="sap-icon://menu2"/>
								<ToolbarSpacer width="1em"/>
								<Image src="http://www.signiwis.com/images/margo.png" width="5em"/>
								<ToolbarSpacer/>
								<Text class="headerText" text="{i18n>headerSigniwis}"/>
								<ToolbarSpacer/>
								<Button type="Transparent" press="onPress" icon="sap-icon://bell" tooltip="{i18n>notify}"/>
								<Button type="Transparent" icon="sap-icon://log" tooltip="{i18n>logoutButton}"/>
							</tnt:ToolHeader>
						</tnt:header>
						<tnt:sideContent>
							<tnt:SideNavigation itemSelect=".onItemSelect">
								<tnt:NavigationList items="{localModel>/sideNav}">
									<tnt:items>
										<tnt:NavigationListItem text="{localModel>navItem}" icon="{localModel>icon}" key="{localModel>key}"/>
									</tnt:items>
								</tnt:NavigationList>
					<tnt:fixedItem>
					<tnt:NavigationList items="{localModel>/fixedNavigation}">
						<tnt:NavigationListItem text="{localModel>title}"/>
					</tnt:NavigationList>
				</tnt:fixedItem>
							</tnt:SideNavigation>
						</tnt:sideContent>
						<tnt:mainContents>
							<NavContainer id="pageContainer">
								<pages>
									<ScrollContainer id="page1" horizontal="false" vertical="true" height="100%" >
										<f:Card class="sapUiMediumMargin" width="400px">
											<f:header>
												<card:Header title="{i18n>Birthday}"/>
											</f:header>
											<f:content>
												<ScrollContainer height="200px" width="100%" vertical="true" focusable="true">
													<List>
														<CustomListItem>
													
														</CustomListItem>
													</List>
												</ScrollContainer>
											</f:content>
										</f:Card>
										<f:Card class="sapUiMediumMargin" width="400px">
											<f:header>
												<card:Header title="{i18n>NewHires}"/>
											</f:header>
											<f:content>
												<ScrollContainer height="200px" width="100%" vertical="true" focusable="true"></ScrollContainer>
											</f:content>
										</f:Card>
										<f:Card class="sapUiMediumMargin" width="400px">
											<f:header>
												<card:Header title="{i18n>NewsFeed}"/>
											
											</f:header>
											<f:content>
												<ScrollContainer height="200px" width="100%" vertical="true" focusable="true"></ScrollContainer>
											</f:content>
										</f:Card>
										<f:Card class="sapUiMediumMargin" width="400px">
											<f:header>
												<card:Header title="{i18n>QuickLinks}"/>
											</f:header>
											<f:content>
												<ScrollContainer height="200px" width="100%" vertical="true" focusable="true"></ScrollContainer>
											</f:content>
										</f:Card>
									</ScrollContainer>
									<ScrollContainer id="page2" horizontal="false" vertical="true" height="100%">
										<Text text="This is second page"/>
									</ScrollContainer>
									<ScrollContainer id="page3" horizontal="false" vertical="true" height="100%">
										<Text text="This is third page"/>
									</ScrollContainer>
								</pages>
							</NavContainer>
						</tnt:mainContents>
					</tnt:ToolPage >
				</content>
			</Page>
		</pages>
	</App>
	<!--</Shell>-->
</mvc:View>