<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:u="sap.ui.unified">
	<ResponsivePopover title="{i18n>nameNotify}" titleAlignment="Center" class="sapUiPopupWithPadding" placement="Left" contentWidth="30%">
		<List items="{notifyData>/data}" id="listid">
			<items>

				<NotificationListItem title="{notifyData>empName}" description="{notifyData>Department}" showCloseButton="true" close=".onItemNotifyClose"
					press=".onListItemPress"/>
			</items>
		</List>
	</ResponsivePopover>
</core:FragmentDefinition>