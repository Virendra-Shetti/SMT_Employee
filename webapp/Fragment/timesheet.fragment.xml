<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"  xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core">
	<Dialog title="TimesheetUpload" titleAlignment="Center">
		<VBox alignContent="Center" alignItems="Center" justifyContent="Center" class="simpleform">
			<form:SimpleForm  editable="true" width="400px">
				<Label text="{i18n>EmployeeId}"></Label>
				<Input id="empid"></Input>
				<Label text="{i18n>EmployeeName}"></Label>
				<Input id="empname"></Input>
				<Label text="{i18n>Date}"></Label>
				<DatePicker id="dateid" change="Change"></DatePicker>
				<Label text="TimesheeetUpload"></Label>
			  <u:FileUploader id="idfileUploader" 
                        placeholder="Choose a  file"
                        style="Emphasized" width="100%">
                        </u:FileUploader>
           <Label></Label>
                        <Button text="Upload" press="onUpload"></Button>
				<Label></Label>
				<Button text="Submit" id="submitid" press="onSubmit" width="100%"></Button>
				<Button text="Cancel" id="cancelid" press="onCancel" width="100%"></Button>
			</form:SimpleForm>
		</VBox>
	</Dialog>
</core:FragmentDefinition>